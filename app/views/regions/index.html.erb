<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Regions</h1>
  <%=link_to 'Nueva regiÃ³n',new_region_path,class:"btn btn-primary"%>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @regions.each do |region| %>
        <tr>
          <td><%= region.name %></td>
          <td>
          <% region.municipalities.each do |municipality| %>

            <%= municipality.state == "Activo" ? municipality.name : nil %>
          <% end %>
        </td>
          <td><%= link_to 'Ver', region %></td>
          <td><%= link_to 'Editar', edit_region_path(region) %></td>
          <td><%= link_to 'Eliminar', region, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
