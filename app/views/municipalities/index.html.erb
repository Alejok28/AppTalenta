<div class="container">
  <p id="notice"><%= notice %></p>

  <h1>Municipalities</h1>
  <%=link_to 'Nuevo municipio',new_municipality_path,class:"btn btn-primary"%>

  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @municipalities.each do |municipality| %>
        <tr>
          <td><%= municipality.name %></td>
          <td><%= municipality.state %></td>
          <td><%= link_to 'Ver', municipality %></td>
          <td><%= link_to 'Editar', edit_municipality_path(municipality) %></td>
          <td><%= link_to 'Eliminar', municipality, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
